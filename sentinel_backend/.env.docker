# Docker Environment Configuration for Sentinel Platform
# This file contains environment variables for Docker Compose deployment

# Database Configuration
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=sentinel_db
DATABASE_URL=postgresql+asyncpg://sentinel:supersecretpassword@db/sentinel_db

# Sentinel-prefixed database configuration
SENTINEL_DB_URL=postgresql+asyncpg://sentinel:supersecretpassword@db:5432/sentinel_db

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Service URLs (Docker internal networking)
AUTH_SERVICE_URL=http://auth_service:8005
SPEC_SERVICE_URL=http://spec_service:8001
ORCHESTRATION_SERVICE_URL=http://orchestration_service:8002
DATA_SERVICE_URL=http://data_service:8004
EXECUTION_SERVICE_URL=http://execution_service:8003

# Sentinel-prefixed service URLs (for config.settings)
SENTINEL_SERVICE_AUTH_SERVICE_URL=http://auth_service:8005
SENTINEL_SERVICE_SPEC_SERVICE_URL=http://spec_service:8001
SENTINEL_SERVICE_ORCHESTRATION_SERVICE_URL=http://orchestration_service:8002
SENTINEL_SERVICE_DATA_SERVICE_URL=http://data_service:8004
SENTINEL_SERVICE_EXECUTION_SERVICE_URL=http://execution_service:8003
SENTINEL_SERVICE_RUST_CORE_SERVICE_URL=http://sentinel_rust_core:8088

# Security Configuration
JWT_SECRET_KEY=sentinel-jwt-secret-change-in-production

# Network Configuration
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8005
SPEC_SERVICE_PORT=8001
ORCHESTRATION_SERVICE_PORT=8002
EXECUTION_SERVICE_PORT=8003
DATA_SERVICE_PORT=8004
DATABASE_PORT=5432

# Sentinel Configuration
SENTINEL_ENVIRONMENT=docker

# LLM Configuration
SENTINEL_APP_LLM_PROVIDER=mock
SENTINEL_APP_ANTHROPIC_API_KEY=${SENTINEL_APP_ANTHROPIC_API_KEY:-your-api-key-here}
SENTINEL_APP_LLM_MODEL=mock-instant
SENTINEL_APP_LLM_TEMPERATURE=0.0
SENTINEL_APP_LLM_MAX_TOKENS=8192
SENTINEL_APP_LLM_MAX_CONTEXT_TOKENS=1000000

# Observability Configuration
SENTINEL_NETWORK_JAEGER_AGENT_HOST=jaeger
SENTINEL_NETWORK_JAEGER_AGENT_PORT=6831
SENTINEL_APP_TRACING_ENABLED=true
SENTINEL_APP_METRICS_ENABLED=true
