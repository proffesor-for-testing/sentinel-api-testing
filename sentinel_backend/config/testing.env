# Sentinel Testing Environment Configuration
# This file contains testing-specific settings

# Environment
SENTINEL_ENVIRONMENT=testing

# Database Settings (use in-memory or test database)
SENTINEL_DB_URL=postgresql+asyncpg://sentinel_test:sentinel_test_password@localhost:5432/sentinel_test_db
SENTINEL_DB_POOL_SIZE=2
SENTINEL_DB_MAX_OVERFLOW=5
SENTINEL_DB_POOL_TIMEOUT=10
SENTINEL_DB_AUTO_MIGRATE=true
SENTINEL_DB_MIGRATION_TIMEOUT=60

# Service URLs (for testing)
SENTINEL_SERVICE_AUTH_SERVICE_URL=http://localhost:18005
SENTINEL_SERVICE_SPEC_SERVICE_URL=http://localhost:18001
SENTINEL_SERVICE_ORCHESTRATION_SERVICE_URL=http://localhost:18002
SENTINEL_SERVICE_DATA_SERVICE_URL=http://localhost:18004
SENTINEL_SERVICE_EXECUTION_SERVICE_URL=http://localhost:18003

# Service Timeouts (shorter for faster tests)
SENTINEL_SERVICE_SERVICE_TIMEOUT=10
SENTINEL_SERVICE_HEALTH_CHECK_TIMEOUT=2
SENTINEL_SERVICE_HEALTH_CHECK_INTERVAL=10

# Security Settings (relaxed for testing)
SENTINEL_SECURITY_JWT_SECRET_KEY=sentinel-testing-secret-key-32-chars-minimum-for-tests
SENTINEL_SECURITY_JWT_ALGORITHM=HS256
SENTINEL_SECURITY_JWT_EXPIRATION_HOURS=1

# Password Policy (relaxed for testing)
SENTINEL_SECURITY_PASSWORD_MIN_LENGTH=6
SENTINEL_SECURITY_PASSWORD_REQUIRE_UPPERCASE=false
SENTINEL_SECURITY_PASSWORD_REQUIRE_LOWERCASE=false
SENTINEL_SECURITY_PASSWORD_REQUIRE_NUMBERS=false
SENTINEL_SECURITY_PASSWORD_REQUIRE_SPECIAL=false

# Session Settings
SENTINEL_SECURITY_SESSION_TIMEOUT_MINUTES=10
SENTINEL_SECURITY_MAX_LOGIN_ATTEMPTS=10
SENTINEL_SECURITY_LOCKOUT_DURATION_MINUTES=1

# CORS Settings (allow all for testing)
SENTINEL_SECURITY_CORS_ORIGINS=["*"]
SENTINEL_SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (disabled for testing)
SENTINEL_SECURITY_RATE_LIMIT_REQUESTS=1000
SENTINEL_SECURITY_RATE_LIMIT_WINDOW_SECONDS=1

# Test Admin User
SENTINEL_SECURITY_DEFAULT_ADMIN_EMAIL=test-admin@sentinel.test
SENTINEL_SECURITY_DEFAULT_ADMIN_PASSWORD=testpass123

# Network Settings (different ports to avoid conflicts)
SENTINEL_NETWORK_API_GATEWAY_PORT=18000
SENTINEL_NETWORK_AUTH_SERVICE_PORT=18005
SENTINEL_NETWORK_SPEC_SERVICE_PORT=18001
SENTINEL_NETWORK_ORCHESTRATION_SERVICE_PORT=18002
SENTINEL_NETWORK_EXECUTION_SERVICE_PORT=18003
SENTINEL_NETWORK_DATA_SERVICE_PORT=18004
SENTINEL_NETWORK_DATABASE_PORT=15432
SENTINEL_NETWORK_HOST=127.0.0.1

# Timeout Settings (shorter for testing)
SENTINEL_NETWORK_HTTP_TIMEOUT=10
SENTINEL_NETWORK_WEBSOCKET_TIMEOUT=15

# Application Settings
SENTINEL_APP_DEBUG=true
SENTINEL_APP_LOG_LEVEL=DEBUG
SENTINEL_APP_LOG_FILE=null

# Pagination (smaller for testing)
SENTINEL_APP_DEFAULT_PAGE_SIZE=5
SENTINEL_APP_MAX_PAGE_SIZE=20

# Feature Flags (all enabled for comprehensive testing)
SENTINEL_APP_ENABLE_ANALYTICS=true
SENTINEL_APP_ENABLE_PERFORMANCE_TESTING=true
SENTINEL_APP_ENABLE_SECURITY_TESTING=true
SENTINEL_APP_ENABLE_DATA_MOCKING=true

# Agent Settings (limited for testing)
SENTINEL_APP_MAX_CONCURRENT_AGENTS=3
SENTINEL_APP_AGENT_TIMEOUT_SECONDS=30

# Test Settings (limited for faster tests)
SENTINEL_APP_MAX_TEST_CASES_PER_SPEC=100
SENTINEL_APP_TEST_EXECUTION_TIMEOUT=60

# LLM Settings (mock or test provider)
SENTINEL_APP_LLM_PROVIDER=mock
SENTINEL_APP_ANTHROPIC_API_KEY=test-api-key
SENTINEL_APP_LLM_MODEL=claude-sonnet-4
SENTINEL_APP_LLM_MAX_TOKENS=500
SENTINEL_APP_LLM_TEMPERATURE=0.0

# Cache Settings (disabled for testing)
SENTINEL_APP_CACHE_ENABLED=false
SENTINEL_APP_CACHE_TTL_SECONDS=60

# Monitoring Settings (disabled for testing)
SENTINEL_APP_METRICS_ENABLED=false
SENTINEL_APP_TRACING_ENABLED=false

# Testing-specific settings
SENTINEL_APP_APP_NAME=Sentinel Testing
SENTINEL_APP_APP_VERSION=test
