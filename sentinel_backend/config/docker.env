# Sentinel Docker Environment Configuration
# This file contains Docker-specific settings for containerized deployment

# Environment
SENTINEL_ENVIRONMENT=docker

# Database Settings (Docker container names)
SENTINEL_DB_URL=postgresql+asyncpg://sentinel:supersecretpassword@db:5432/sentinel_db
SENTINEL_DB_POOL_SIZE=15
SENTINEL_DB_MAX_OVERFLOW=30
SENTINEL_DB_POOL_TIMEOUT=45
SENTINEL_DB_POOL_RECYCLE=3600
SENTINEL_DB_AUTO_MIGRATE=true
SENTINEL_DB_MIGRATION_TIMEOUT=300

# Service URLs (Docker container names)
SENTINEL_SERVICE_AUTH_SERVICE_URL=http://auth_service:8000
SENTINEL_SERVICE_SPEC_SERVICE_URL=http://spec_service:8001
SENTINEL_SERVICE_ORCHESTRATION_SERVICE_URL=http://orchestration_service:8002
SENTINEL_SERVICE_DATA_SERVICE_URL=http://data_service:8004
SENTINEL_SERVICE_EXECUTION_SERVICE_URL=http://execution_service:8003

# Service Timeouts
SENTINEL_SERVICE_SERVICE_TIMEOUT=30
SENTINEL_SERVICE_HEALTH_CHECK_TIMEOUT=5
SENTINEL_SERVICE_HEALTH_CHECK_INTERVAL=30

# Security Settings
SENTINEL_SECURITY_JWT_SECRET_KEY=sentinel-docker-secret-key-change-for-production-deployment
SENTINEL_SECURITY_JWT_ALGORITHM=HS256
SENTINEL_SECURITY_JWT_EXPIRATION_HOURS=24

# Password Policy (moderate for Docker)
SENTINEL_SECURITY_PASSWORD_MIN_LENGTH=8
SENTINEL_SECURITY_PASSWORD_REQUIRE_UPPERCASE=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_LOWERCASE=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_NUMBERS=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_SPECIAL=false

# Session Settings
SENTINEL_SECURITY_SESSION_TIMEOUT_MINUTES=60
SENTINEL_SECURITY_MAX_LOGIN_ATTEMPTS=5
SENTINEL_SECURITY_LOCKOUT_DURATION_MINUTES=15

# CORS Settings (allow frontend container)
SENTINEL_SECURITY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://frontend:3000"]
SENTINEL_SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
SENTINEL_SECURITY_RATE_LIMIT_REQUESTS=100
SENTINEL_SECURITY_RATE_LIMIT_WINDOW_SECONDS=60

# Default Admin User
SENTINEL_SECURITY_DEFAULT_ADMIN_EMAIL=admin@sentinel.com
SENTINEL_SECURITY_DEFAULT_ADMIN_PASSWORD=admin123

# Network Settings (Docker internal ports)
SENTINEL_NETWORK_API_GATEWAY_PORT=8000
SENTINEL_NETWORK_AUTH_SERVICE_PORT=8000
SENTINEL_NETWORK_SPEC_SERVICE_PORT=8001
SENTINEL_NETWORK_ORCHESTRATION_SERVICE_PORT=8002
SENTINEL_NETWORK_EXECUTION_SERVICE_PORT=8003
SENTINEL_NETWORK_DATA_SERVICE_PORT=8004
SENTINEL_NETWORK_DATABASE_PORT=5432
SENTINEL_NETWORK_HOST=0.0.0.0

# Timeout Settings
SENTINEL_NETWORK_HTTP_TIMEOUT=30
SENTINEL_NETWORK_WEBSOCKET_TIMEOUT=60

# Health Check Settings
SENTINEL_NETWORK_HEALTH_CHECK_ENABLED=true
SENTINEL_NETWORK_HEALTH_CHECK_PATH=/health

# Application Settings
SENTINEL_APP_DEBUG=false
SENTINEL_APP_LOG_LEVEL=INFO
SENTINEL_APP_LOG_FILE=null

# Pagination
SENTINEL_APP_DEFAULT_PAGE_SIZE=20
SENTINEL_APP_MAX_PAGE_SIZE=100

# Feature Flags
SENTINEL_APP_ENABLE_ANALYTICS=true
SENTINEL_APP_ENABLE_PERFORMANCE_TESTING=true
SENTINEL_APP_ENABLE_SECURITY_TESTING=true
SENTINEL_APP_ENABLE_DATA_MOCKING=true

# Agent Settings
SENTINEL_APP_MAX_CONCURRENT_AGENTS=10
SENTINEL_APP_AGENT_TIMEOUT_SECONDS=300

# Test Settings
SENTINEL_APP_MAX_TEST_CASES_PER_SPEC=1000
SENTINEL_APP_TEST_EXECUTION_TIMEOUT=600

# LLM Settings
SENTINEL_APP_LLM_PROVIDER=openai
# SENTINEL_APP_LLM_API_KEY=your-openai-api-key-here
SENTINEL_APP_LLM_MODEL=gpt-3.5-turbo
SENTINEL_APP_LLM_MAX_TOKENS=2000
SENTINEL_APP_LLM_TEMPERATURE=0.7

# Cache Settings
SENTINEL_APP_CACHE_ENABLED=true
SENTINEL_APP_CACHE_TTL_SECONDS=3600

# Monitoring Settings
SENTINEL_APP_METRICS_ENABLED=true
SENTINEL_APP_TRACING_ENABLED=false

# Docker-specific settings
SENTINEL_APP_APP_NAME=Sentinel API Testing Platform
SENTINEL_APP_APP_VERSION=1.0.0

# Container Resource Settings (for documentation)
# These would typically be set in docker-compose.yml or Kubernetes manifests
# CONTAINER_MEMORY_LIMIT=512m
# CONTAINER_CPU_LIMIT=0.5
# CONTAINER_RESTART_POLICY=unless-stopped
