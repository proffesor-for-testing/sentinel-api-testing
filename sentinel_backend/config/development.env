# Sentinel Development Environment Configuration
# This file contains development-specific settings

# Environment
SENTINEL_ENVIRONMENT=development

# Database Settings
SENTINEL_DB_URL=postgresql+asyncpg://sentinel:sentinel_dev_password@localhost:5432/sentinel_dev_db
SENTINEL_DB_POOL_SIZE=5
SENTINEL_DB_MAX_OVERFLOW=10
SENTINEL_DB_AUTO_MIGRATE=true

# Service URLs (for local development)
SENTINEL_SERVICE_AUTH_SERVICE_URL=http://localhost:8005
SENTINEL_SERVICE_SPEC_SERVICE_URL=http://localhost:8001
SENTINEL_SERVICE_ORCHESTRATION_SERVICE_URL=http://localhost:8002
SENTINEL_SERVICE_DATA_SERVICE_URL=http://localhost:8004
SENTINEL_SERVICE_EXECUTION_SERVICE_URL=http://localhost:8003

# Security Settings
SENTINEL_SECURITY_JWT_SECRET_KEY=sentinel-development-secret-key-32-chars-minimum
SENTINEL_SECURITY_JWT_EXPIRATION_HOURS=24
SENTINEL_SECURITY_DEFAULT_ADMIN_EMAIL=admin@sentinel.dev
SENTINEL_SECURITY_DEFAULT_ADMIN_PASSWORD=admin123

# CORS Settings (allow local frontend)
SENTINEL_SECURITY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Network Settings
SENTINEL_NETWORK_API_GATEWAY_PORT=8000
SENTINEL_NETWORK_AUTH_SERVICE_PORT=8005
SENTINEL_NETWORK_SPEC_SERVICE_PORT=8001
SENTINEL_NETWORK_ORCHESTRATION_SERVICE_PORT=8002
SENTINEL_NETWORK_EXECUTION_SERVICE_PORT=8003
SENTINEL_NETWORK_DATA_SERVICE_PORT=8004
SENTINEL_NETWORK_DATABASE_PORT=5432
SENTINEL_NETWORK_HOST=0.0.0.0

# Application Settings
SENTINEL_APP_DEBUG=true
SENTINEL_APP_LOG_LEVEL=DEBUG
SENTINEL_APP_ENABLE_ANALYTICS=true
SENTINEL_APP_ENABLE_PERFORMANCE_TESTING=true
SENTINEL_APP_ENABLE_SECURITY_TESTING=true
SENTINEL_APP_ENABLE_DATA_MOCKING=true

# LLM Settings (for development/testing)
SENTINEL_APP_LLM_PROVIDER=anthropic
# SENTINEL_APP_ANTHROPIC_API_KEY=your-api-key
SENTINEL_APP_LLM_MODEL=claude-sonnet-4
SENTINEL_APP_LLM_MAX_TOKENS=2000
SENTINEL_APP_LLM_TEMPERATURE=0.7

# Cache Settings
SENTINEL_APP_CACHE_ENABLED=true
SENTINEL_APP_CACHE_TTL_SECONDS=1800

# Monitoring Settings
SENTINEL_APP_METRICS_ENABLED=true
SENTINEL_APP_TRACING_ENABLED=false
