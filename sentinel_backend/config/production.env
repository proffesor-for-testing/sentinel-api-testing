# Sentinel Production Environment Configuration
# This file contains production-specific settings
# WARNING: Never commit sensitive production values to version control

# Environment
SENTINEL_ENVIRONMENT=production

# Database Settings
# SENTINEL_DB_URL=postgresql+asyncpg://sentinel_user:CHANGE_ME@prod-db-host:5432/sentinel_prod_db
SENTINEL_DB_POOL_SIZE=20
SENTINEL_DB_MAX_OVERFLOW=40
SENTINEL_DB_POOL_TIMEOUT=60
SENTINEL_DB_POOL_RECYCLE=7200
SENTINEL_DB_AUTO_MIGRATE=false
SENTINEL_DB_MIGRATION_TIMEOUT=600

# Service URLs (production internal network)
# SENTINEL_SERVICE_AUTH_SERVICE_URL=http://auth-service:8005
# SENTINEL_SERVICE_SPEC_SERVICE_URL=http://spec-service:8001
# SENTINEL_SERVICE_ORCHESTRATION_SERVICE_URL=http://orchestration-service:8002
# SENTINEL_SERVICE_DATA_SERVICE_URL=http://data-service:8004
# SENTINEL_SERVICE_EXECUTION_SERVICE_URL=http://execution-service:8003

# Service Timeouts (increased for production)
SENTINEL_SERVICE_SERVICE_TIMEOUT=60
SENTINEL_SERVICE_HEALTH_CHECK_TIMEOUT=10
SENTINEL_SERVICE_HEALTH_CHECK_INTERVAL=60

# Security Settings
# SENTINEL_SECURITY_JWT_SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_STRING_AT_LEAST_64_CHARS
SENTINEL_SECURITY_JWT_ALGORITHM=HS256
SENTINEL_SECURITY_JWT_EXPIRATION_HOURS=8

# Password Policy (stricter for production)
SENTINEL_SECURITY_PASSWORD_MIN_LENGTH=12
SENTINEL_SECURITY_PASSWORD_REQUIRE_UPPERCASE=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_LOWERCASE=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_NUMBERS=true
SENTINEL_SECURITY_PASSWORD_REQUIRE_SPECIAL=true

# Session Settings (shorter for production)
SENTINEL_SECURITY_SESSION_TIMEOUT_MINUTES=30
SENTINEL_SECURITY_MAX_LOGIN_ATTEMPTS=3
SENTINEL_SECURITY_LOCKOUT_DURATION_MINUTES=30

# CORS Settings (restrict to production domains)
# SENTINEL_SECURITY_CORS_ORIGINS=["https://sentinel.yourdomain.com", "https://api.yourdomain.com"]
SENTINEL_SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (stricter for production)
SENTINEL_SECURITY_RATE_LIMIT_REQUESTS=50
SENTINEL_SECURITY_RATE_LIMIT_WINDOW_SECONDS=60

# Default Admin (should be changed immediately after deployment)
# SENTINEL_SECURITY_DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
# SENTINEL_SECURITY_DEFAULT_ADMIN_PASSWORD=CHANGE_ME_IMMEDIATELY

# Network Settings
SENTINEL_NETWORK_API_GATEWAY_PORT=8000
SENTINEL_NETWORK_AUTH_SERVICE_PORT=8005
SENTINEL_NETWORK_SPEC_SERVICE_PORT=8001
SENTINEL_NETWORK_ORCHESTRATION_SERVICE_PORT=8002
SENTINEL_NETWORK_EXECUTION_SERVICE_PORT=8003
SENTINEL_NETWORK_DATA_SERVICE_PORT=8004
SENTINEL_NETWORK_DATABASE_PORT=5432
SENTINEL_NETWORK_HOST=0.0.0.0

# Timeout Settings (increased for production)
SENTINEL_NETWORK_HTTP_TIMEOUT=60
SENTINEL_NETWORK_WEBSOCKET_TIMEOUT=120

# Application Settings
SENTINEL_APP_DEBUG=false
SENTINEL_APP_LOG_LEVEL=INFO
SENTINEL_APP_LOG_FILE=/var/log/sentinel/sentinel.log

# Pagination (larger for production)
SENTINEL_APP_DEFAULT_PAGE_SIZE=50
SENTINEL_APP_MAX_PAGE_SIZE=200

# Feature Flags
SENTINEL_APP_ENABLE_ANALYTICS=true
SENTINEL_APP_ENABLE_PERFORMANCE_TESTING=true
SENTINEL_APP_ENABLE_SECURITY_TESTING=true
SENTINEL_APP_ENABLE_DATA_MOCKING=true

# Agent Settings (increased for production)
SENTINEL_APP_MAX_CONCURRENT_AGENTS=20
SENTINEL_APP_AGENT_TIMEOUT_SECONDS=600

# Test Settings (increased limits for production)
SENTINEL_APP_MAX_TEST_CASES_PER_SPEC=5000
SENTINEL_APP_TEST_EXECUTION_TIMEOUT=1800

# LLM Settings
SENTINEL_APP_LLM_PROVIDER=openai
# SENTINEL_APP_LLM_API_KEY=your-production-openai-api-key
SENTINEL_APP_LLM_MODEL=gpt-4
SENTINEL_APP_LLM_MAX_TOKENS=4000
SENTINEL_APP_LLM_TEMPERATURE=0.5

# Cache Settings (longer TTL for production)
SENTINEL_APP_CACHE_ENABLED=true
SENTINEL_APP_CACHE_TTL_SECONDS=7200

# Monitoring Settings (enabled for production)
SENTINEL_APP_METRICS_ENABLED=true
SENTINEL_APP_TRACING_ENABLED=true

# Production-specific settings
SENTINEL_APP_APP_NAME=Sentinel API Testing Platform
SENTINEL_APP_APP_VERSION=1.0.0
